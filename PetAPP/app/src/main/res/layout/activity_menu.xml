<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_menu_dueño"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".MenuDueño">

    <!-- Toolbar personalizada -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/primaryColor"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/logo_app"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:contentDescription="@string/logo"
            android:layout_marginBottom="40dp" />

        <!-- Otros botones (sin los que ya van en la toolbar) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_perfil_mascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfil de la Mascota"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryColor"
            android:padding="12dp"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:elevation="6dp"
            android:layout_marginBottom="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_registrar_medicamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar medicamentos"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryColor"
            android:padding="12dp"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:elevation="6dp"
            android:layout_marginBottom="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_historial_medico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial Médico"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryColor"
            android:padding="12dp"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:elevation="6dp"
            android:layout_marginBottom="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cerrar_sesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryColor"
            android:padding="12dp"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:elevation="6dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>
</LinearLayout>
